    <%include ../../public/header/header %>
    <div class="container">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Piclife</h1>
            </div>
        </div>

            <% if(piclife) {%>
                <% for(var j in piclife) {%>
                    <% var ele=( ( piclife[j].path instanceof Array)? piclife[j].path[0] : piclife[j].path); %>
                    <div class="row">
                        <div class="col-md-4 col-md-offset-2">
                            <a href="/singlepic?picid=<%= piclife[j].id %>">
                                <img class="img-responsive" src="<%= ele %>" alt="">
                            </a>
                        </div>
                        <div class="col-md-4">
                            <h3><%= piclife[j].title %></h3>
                            <p><%= piclife[j].content %></p>
                            <a class="btn btn-primary" href="/singlepic?picid=<%= piclife[j].id %>">View More<span class="glyphicon glyphicon-chevron-right"></span></a>
                        </div>
                    </div>
                    <!-- /.row -->

                    <hr>
                <% }%>
            <% } else {%>
                <p>没有任何照片</p>
            <% }%>
